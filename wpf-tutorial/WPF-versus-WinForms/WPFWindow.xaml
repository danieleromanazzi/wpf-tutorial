<Window x:Class="wpf_tutorial.WPF_versus_WinForms.WPFWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_tutorial.WPF_versus_WinForms"
        mc:Ignorable="d"
        Title="Window" Height="450" Width="800">
    <StackPanel>
        <TextBlock Margin="10" TextWrapping="Wrap">
			TextBlock with <Bold>bold</Bold>, <Italic>italic</Italic> and <Underline>underlined</Underline> text.
        </TextBlock>
        <TextBox Width="100" AcceptsReturn="True" TextWrapping="Wrap" SpellCheck.IsEnabled="True" Language="it-it" />

    </StackPanel>
</Window>
