<Window x:Class="wpf_challenge_containers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_challenge_containers"
        mc:Ignorable="d"
        Title="wpf-challenge-containers" Height="450" Width="800">
    <StackPanel>
        <local:Section Background="#FF292B34" Text="Header" Height="80" DockPanel.Dock="Top" />
        <local:Section Background="#E5292B34" Text="TopNav" Height="30" DockPanel.Dock="Top" />
        <local:Section Background="DarkGray" Text="LeftNav" Width="200" DockPanel.Dock="Left"/>
        <local:Section Background="LightGray" Text="Content" />
        <local:Section Background="#FF292B34" Text="Footer" Height="30" DockPanel.Dock="Bottom"/>
    </StackPanel>
</Window>
