<ResourceDictionary 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:cgm.AIS.Windows.Controls.Views">

    <Style x:Key="ListBoxScrollEndStyle">
        <Style.Resources>
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FFE1E1E1" />
            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FFE1E1E1" />
        </Style.Resources>
    </Style>

    <Style x:Key="TextItemListStyle">
        <Style.Resources>
            <!--Background of selected item when focussed-->
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
            <!--Background of selected item when not focussed-->
            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
        </Style.Resources>
    </Style>

</ResourceDictionary>